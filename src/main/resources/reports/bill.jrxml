              name="OceanViewResort_Bill" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20" uuid="2f5c97b2-7fd7-4d76-8f0d-9a63db6df9f0">

    <parameter name="reservationId" class="java.lang.Integer"/>
    <parameter name="customerName" class="java.lang.String"/>
    <parameter name="roomNo" class="java.lang.String"/>
    <parameter name="roomType" class="java.lang.String"/>
    <parameter name="nights" class="java.lang.Integer"/>
    <parameter name="pricePerNight" class="java.math.BigDecimal"/>
    <parameter name="subTotal" class="java.math.BigDecimal"/>
    <parameter name="serviceCharge" class="java.math.BigDecimal"/>
    <parameter name="tax" class="java.math.BigDecimal"/>
