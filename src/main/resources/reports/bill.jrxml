                <text><![CDATA[Nights:]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="44" width="200" height="16"/>
                <textFieldExpression><![CDATA[$P{nights}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="66" width="120" height="16"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Rate / Night:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="130" y="66" width="200" height="16"/>
                <textFieldExpression><![CDATA[$P{pricePerNight}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="88" width="120" height="16"/>
