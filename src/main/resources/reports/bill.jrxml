                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Ocean View Resort]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="26" width="555" height="18"/>
                <textElement textAlignment="Center">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Reservation Bill / Invoice]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="52" width="90" height="16"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Bill For:]]></text>
            </staticText>
            <textField>
                <reportElement x="92" y="52" width="300" height="16"/>
                <textFieldExpression><![CDATA[$P{customerName}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="400" y="52" width="80" height="16"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Generated:]]></text>
            </staticText>
            <textField>
                <reportElement x="480" y="52" width="75" height="16"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{generatedAt}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="78" width="555" height="1"/>
            </line>
        </band>
    </title>

    <detail>
        <band height="250">

            <staticText>
                <reportElement x="0" y="0" width="120" height="16"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Reservation ID:]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="0" width="200" height="16"/>
