            </textField>

            <staticText>
                <reportElement x="0" y="22" width="120" height="16"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Room:]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="22" width="200" height="16"/>
                <textFieldExpression><![CDATA[$P{roomNo} + " (" + $P{roomType} + ")"]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="44" width="120" height="16"/>
