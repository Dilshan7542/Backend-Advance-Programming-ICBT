                <textFieldExpression><![CDATA[$P{status} + ( ($P{paidAt} == null || $P{paidAt}.isBlank()) ? "" : ("  (" + $P{paidAt} + ")") )]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="120" width="555" height="1"/>
            </line>

            <staticText>
                <reportElement x="0" y="135" width="200" height="18"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Charges]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="160" width="200" height="16"/>
                <text><![CDATA[Sub Total]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="355" y="160" width="200" height="16"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{subTotal}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="182" width="200" height="16"/>
                <text><![CDATA[Service Charge (10%)]]></text>
            </staticText>
            <textField pattern="#,##0.00">
