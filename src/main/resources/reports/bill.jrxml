                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{tax}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="226" width="555" height="1"/>
            </line>

            <staticText>
                <reportElement x="0" y="232" width="200" height="20"/>
                <textElement><font isBold="true" size="13"/></textElement>
                <text><![CDATA[Total]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="355" y="232" width="200" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true" size="13"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{total}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <pageFooter>
        <band height="30">
            <line>
                <reportElement x="0" y="0" width="555" height="1"/>
            </line>
            <staticText>
                <reportElement x="0" y="8" width="555" height="16"/>
                <textElement textAlignment="Center">
                    <font size="9"/>
                </textElement>
                <text><![CDATA[Thank you for choosing Ocean View Resort]]></text>
            </staticText>
        </band>
    </pageFooter>

</jasperReport>
